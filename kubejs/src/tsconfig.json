{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "paths": {},
		"inlineSourceMap": true,
		"charset": "UTF-8",
		"downlevelIteration": true,
		"newLine": "lf",
		"strict": true
    },
    "include": [
		"**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "out",
        "tmp",
		"logs",
    ]
}
